<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White">

    <RelativeLayout
        android:id="@+id/rlEdit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/relativelayout.size.contact"
        android:background="@color/imageview.backgroud.actionbar">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20px"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/texttiew.text.txtContact"
            android:textSize="@dimen/textview.size.txtContact"
            android:textColor="@color/White"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEdit2"
        android:layout_below="@+id/rlEdit"
        android:layout_width="match_parent"
        android:layout_height="125dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

        <intership.dev.contact.widget.CircleImageView
            android:id="@+id/imgEditAvatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_avt1"
            android:layout_centerVertical="true">
        </intership.dev.contact.widget.CircleImageView>

        <TextView
            android:id="@+id/txtEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tran ChanhY"
            android:textSize="@dimen/textview.size.txtContact"
            android:layout_toRightOf="@+id/imgEditAvatar"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textColor="@color/textview.item.txtUsername"/>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlEdit3"
        android:layout_below="@+id/rlEdit2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/gray_3">
    <EditText
        android:id="@+id/edtEditname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tran ChanhY"
        android:textSize="@dimen/textview.size.txtContact"
        android:layout_marginLeft="10dp"
        android:background="@color/gray_3"/>
    </RelativeLayout>
    <View
        android:id="@+id/viewEdit2"
        android:layout_below="@+id/rlEdit3"
        android:layout_width="match_parent"
        android:layout_height="40dp"></View>

    <EditText
        android:id="@+id/edtEditNoidung"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/viewEdit"
        android:layout_below="@+id/viewEdit2"
        android:background="@color/gray_3" />


    <View
        android:id="@+id/viewEdit"
        android:layout_above="@+id/lnEdit"
        android:layout_width="match_parent"
        android:layout_height="80dp"></View>
    <LinearLayout
        android:id="@+id/lnEdit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtEditSave"
            android:layout_width="@dimen/textview.dialog.txtOk"
            android:layout_height="match_parent"
            android:text="Save"
            android:textSize="20sp"
            android:textColor="@color/textview.dialog.txtOk"
            android:layout_weight="1"
            android:gravity="center_horizontal" />
        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/view.dialog"/>
        <TextView
            android:id="@+id/txtEditCancel"
            android:layout_width="@dimen/textview.dialog.txtOk"
            android:layout_height="match_parent"
            android:text="Cancel"
            android:textColor="@color/textview.dialog.txtOk"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="center_horizontal"/>

    </LinearLayout>



</RelativeLayout>
